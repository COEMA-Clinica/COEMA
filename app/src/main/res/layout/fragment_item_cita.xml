<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="271dp"
        android:layout_height="343dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="352dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNomItem"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:text="Nombre"
                android:textColor="#1AEBB2"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtApePaItem"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:text="Apellido Paterno"
                android:textColor="#1AEBB2"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtApeMaItem"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:text="Apellido Materno"
                android:textColor="#1AEBB2"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtSexoItem"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:text="Sexo"
                android:textColor="#1AEBB2"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtFechaItem"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:text="Fecha de Nacimiento"
                android:textColor="#1AEBB2"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtEspeItem"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:text="Especialidad"
                android:textColor="#1AEBB2"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDoctorItem"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:text="Doctor"
                android:textColor="#1AEBB2"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgFoto"
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:layout_weight="1"
                tools:srcCompat="@tools:sample/avatars"
                app:tint="#B9E8DB" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>